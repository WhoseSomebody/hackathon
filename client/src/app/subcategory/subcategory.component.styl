.categories
  display flex
  flex-wrap wrap
  justify-content space-around
  cursor pointer
  .category
    min-width 600px
    height 350px
    overflow hidden
    margin 20px
    border-radius 5px
    position relative
    transition margin ease-out 100ms
    img
      width 100%
      margin-top -60px
    &:hover
      margin-top 15px
    .title
      text-align center
      display flex
      justify-content center
      align-items center
      background-color rgba(0,0,0,.8)
      margin-top -130px
      position absolute
      font-size 16px
      text-transform uppercase
      width 100%
      height 60px
      color #fff
      span
        width 80%
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        line-height 30px


